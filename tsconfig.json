
{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2018"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "strict": true,
    "module": "esNext",
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "*"]
    },
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "exclude": [
    "android",
    "ios",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
  ]
}
